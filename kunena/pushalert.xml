<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.8" group="kunena" method="upgrade">
	<name>plg_kunena_pushalert</name>
	<creationDate>11.12.2018</creationDate>
	<author>Michael Pfister</author>
	<authorEmail>michael@mp-development.de</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>2018 Michael Pfister</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.4.0</version>
	<description>PLG_KUNENA_PUSHALERT_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile></scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_kunena_pushalert.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_kunena_pushalert.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_kunena_pushalert.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_kunena_pushalert.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<filename plugin="pushalert">pushalert.php</filename>
		<filename>push.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="apikey"
					type="text"
					default="42"
					label="PLG_KUNENA_PUSHALERT_APIKEY_LABEL"
					description="PLG_KUNENA_PUSHALERT_APIKEY_DESCRIPTION"
				/>
			</fieldset>
		</fields>
	</config>

	<!-- Update servers -->
	<!-- <updateservers>
		<server type="extension" priority="1" name="push-alert">https://www.example.com/plg_push-alert.xml</server>
	</updateservers> -->
</extension>
